{{ form_start(form) }}
<div class="container p-2">
    <div class="form-group">
        <label>Название книги</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}} ) }}
        <span class="text-danger">{{ form_errors(form.name) }}</span>
    </div>

    <div class="form-group">
        <label>Автор</label>
        {{ form_widget(form.author,{'attr': {'class': 'form-control'}} ) }}
        <span class="text-danger">{{ form_errors(form.author) }}</span>
    </div>

    <div class="form-group">
        <label>Установка обложки</label>
            <div class="custom-file">
                {{ form_widget(form.image,{'attr': {'class': 'custom-file-input'}} ) }}
                <label class="custom-file-label" for="customFile">Выбрать</label>
            </div>
        <span class="text-danger">{{ form_errors(form.image) }}</span>
    </div>

    <div class="form-group">
        <label>Файл с книгой</label>
        <div class="custom-file">
            {{ form_widget(form.bookFile, {'attr': {'class': 'custom-file-input'}} ) }}
            <label class="custom-file-label" for="customFile">Выбрать</label>
        </div>
        <span class="text-danger">{{ form_errors(form.bookFile) }}</span>
    </div>

    <div class="form-group">
        <label>Дата прочтения</label>
        {{ form_widget(form.dateRead) }}
        <span class="text-danger">{{ form_errors(form.dateRead) }}</span>
    </div>

    <button type="submit" class="btn btn-info w-100">{{ button_label|default('Добавить в библиотеку')}}</button>
</div>
{{ form_end(form) }}