{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container p-2">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="mb-3">Регистрация</h1>

        {{ form_start(registrationForm) }}
        <div class="form-group">
            <label>Электронная почта</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(registrationForm.email) }}</span>
        </div>

        <div class="form-group">
            <label>Пароль</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}} ) }}
            <span class="text-danger">{{ form_errors(registrationForm.plainPassword) }}</span>
        </div>

        <div class="form-group custom-control custom-checkbox ">
            {{ form_widget(registrationForm.agreeTerms) }}
            <label for="PersData">Я согласен с использованием моих персональных данных</label>
        </div>

        <button type="submit" class="btn btn-info w-100">Зарегистрироваться</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}